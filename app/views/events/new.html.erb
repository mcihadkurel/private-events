<h1>New Event</h1>
<div class="form">
    <%= form_with(model: @event, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :main_image %>
            <%= f.file_field :main_image, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :event_date %>
            <%= f.datetime_select :event_date, { ampm: true }, { class: "datetime" } %>
        </div>

        <%= f.submit "New Event", class: ["btn", "btn-primary"] %>

    <% end %>
</div>